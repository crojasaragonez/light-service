{
    "name": "crojasaragonez/light-service",
    "type": "library",
    "description": "Php port for https://github.com/adomokos/light-service",
    "keywords": [
        "crojasaragonez",
        "LightService"
    ],
    "homepage": "https://github.com/crojasaragonez/light-service",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Luis Rojas AragonÃ©s",
            "email": "crojasaragonez@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "^12.1",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "crojasaragonez\\LightService\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "crojasaragonez\\LightService\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
